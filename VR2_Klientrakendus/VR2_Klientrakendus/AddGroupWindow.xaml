        <wpfTool:MaskedTextBox x:Name="TxtGroupDescription" HorizontalAlignment="Left" Height="175" Margin="10,59,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="272" VerticalScrollBarVisibility="Auto"/>

    </Grid>
</Window>
